@model IEnumerable<doanthi.Models.Khachhang>

@{
    
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/style.css" asp-append-version="true">
</head>
<body>
<h1>Khách Hàng</h1>

<p>
    <a asp-action="Create">Thêm Khách Hàng</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birday)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><image src="/image/edit.jpg" style="width:15px;height:100%"></image>Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><image src="/image/view.jpg" style="width:15px;height:100%"></image>Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><image src="/image/delete.jpg" style="width:15px;height:100%"></image>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>